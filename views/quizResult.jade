doctype html
html(lang='en')
  head
    title Quiz result
    link(href='/../stylesheets/bootstrap.min.css', rel='stylesheet')
  body(ng-controller='MainController')
    h2 You submitted answers to #{quiz.title}!
    each problem, index in quiz.problems
      p <b>#{index+1}.</b> &nbsp; #{ "\\(" + problem.text + "\\)"}
      p <b>Answer: #{problem.solution}, you answered: #{problem.answer}</b> 
      
    script(type='text/x-mathjax-config').
      MathJax.Hub.Config({
        extensions: ['tex2jax.js'],
        jax: ['input/TeX', 'output/HTML-CSS'],
        tex2jax: {
          inlineMath: [ ['$','$'], ['\\(','\\)'] ],
          displayMath: [ ['$$','$$'], ['\\[','\\]'] ],
          processEscapes: true
        },
        'HTML-CSS': { 
          availableFonts: ['TeX'] ,
          scale: 120
        }
      });
    script(type='text/javascript', src='/../libs/mathjax/MathJax.js')
    script(type="text/javascript", src="/javascripts/angular.js")
